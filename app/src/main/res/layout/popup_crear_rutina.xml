<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/nombre_rutina"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Nombre:"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"/>

    <EditText
        android:id="@+id/nuev_nombre"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignLeft="@+id/nombre_rutina"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="54dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Tiempo de descanso:"
        android:layout_below="@id/nombre_rutina"
        android:layout_marginTop="30dp"
        android:layout_alignParentLeft="true"/>

    <EditText
        android:id="@+id/nuev_tiempo_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nombre_rutina"
        android:layout_alignLeft="@id/nombre_rutina"
        android:inputType="number"
        android:layout_marginLeft="145dp"
        android:layout_marginTop="30dp"/>

    <CheckBox
        android:id="@+id/Publica"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/confirmar"
        android:layout_below="@+id/nuev_tiempo_desc"
        android:layout_alignParentLeft="true"
        android:text="PÃºblica" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nuev_tiempo_desc"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/nuev_tiempo_desc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dificultad:" />

        <Spinner
            android:id="@+id/dificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:layout_alignParentBottom="true"
        android:text="Crear"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"/>
</RelativeLayout>