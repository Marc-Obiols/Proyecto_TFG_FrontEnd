<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="250dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_gravity="center">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/nombre_rutina"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Nombre:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/nuev_nombre"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/l2"
        android:layout_below="@+id/l1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Tiempo de descanso:"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/nuev_tiempo_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/Publica"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/confirmar"
        android:layout_below="@+id/l2"
        android:layout_alignParentLeft="true"
        android:text="PÃºblica" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/Publica"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/l2">

        <TextView
            android:paddingLeft="5dp"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="match_parent"
            android:text="Dificultad:" />

        <Spinner
            android:id="@+id/dificultad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <Button
        android:id="@+id/confirmar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="42dp"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:text="Crear"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/cancelar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/white"
        android:text="Cancelar"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"/>
</RelativeLayout>