<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:padding="5dp"
    android:layout_gravity="center">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:textColor="@color/black"
        android:layout_alignParentTop="true"
        android:text="Introduce el peso de hoy:"
        android:textSize="15dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"/>
    <TextView
        android:id="@+id/ult_reg_pes"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/ult_reg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:text="Introduce la altura:"
        android:textColor="@color/black"
        android:layout_below="@+id/ult_reg_pes"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/pes_met"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textSize="15dp"
        android:text="Introduce el peso meta:"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/ult_reg"
        android:layout_marginTop="10dp"/>

    <EditText
        android:id="@+id/peso_mod"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@null"
        android:ems="10"
        android:hint="Kg"
        android:inputType="number"
        android:textSize="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_marginRight="20dp"/>

    <EditText
        android:id="@+id/altura"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@null"
        android:hint="cm"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:layout_below="@+id/peso_mod"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"/>
    <EditText
        android:id="@+id/peso_meta_nuev"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:background="@null"
        android:hint="Kg"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:layout_below="@+id/altura"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:gravity="center">
    <Button
        android:id="@+id/actualizar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirmar"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginRight="10dp"/>

    <Button
        android:id="@+id/cancelar"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAllCaps="false"
        android:text="Cancelar" />
    </LinearLayout>

</RelativeLayout>