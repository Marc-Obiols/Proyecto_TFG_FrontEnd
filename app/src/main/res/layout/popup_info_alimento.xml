<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="300dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:layout_gravity="center">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/l1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="10dp">
                <TextView
                    android:id="@+id/nom"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="HOLA"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
            </LinearLayout>
            <GridLayout
                android:layout_marginTop="10dp"
                android:id="@+id/idGrid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="5"
                android:rowCount="2">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kcal"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proteinas (g)"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grasas (g)"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fibra (g)"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbohidratos (g)"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/kcal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kcal"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/proteinas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Proteinas"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/grasas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grasas"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/fibra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Fibra"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1">
                        <TextView
                            android:id="@+id/carbo_hidra"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Carbohidratos"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"
                            android:textSize="10dp"
                            android:textStyle="bold"/>
                    </LinearLayout>
            </GridLayout>
            <TextView
                android:id="@+id/receta"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
            <ImageView
                android:id="@+id/img"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Cantidad (en gramos):"/>
            <EditText
                android:id="@+id/gramos"
                android:text="100"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:inputType="number"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:backgroundTint="@color/Naranja"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:textAllCaps="false"
        android:text="Añadir"/>

</RelativeLayout>